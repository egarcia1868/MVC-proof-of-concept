<div class="pic">
  <img src="./assets/img/newBurger.png" alt="Burger Fortnite Durr Burger Logo PNG Clipart @.epicentrofestival.com" class="burger">

  <h2>Eat-Da-Damn-Burger!</h2>
</div>
<div class="row">
  <div class="col-1"></div>
  <div class="col-5">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{id}} {{burger_name}}

            <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
              Devour it!
            </button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-5">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> cats/cat-block sleep=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-1"></div>
</div>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
